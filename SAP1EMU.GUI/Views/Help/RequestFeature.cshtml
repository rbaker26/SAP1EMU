@model SAP1EMU.GUI.Models.FeatureRequest

<script src="~/js/Views/ReportView.js" type="text/javascript"></script>

@{
    ViewData["Title"] = "Request a Feature";
}

@* Contains the necessary js to check the form for validiation *@
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }


<h1>Request a Feature</h1>
<h4>Thank you for using our emulator! Tell us the ideas you have for this site! </h4>
<hr />

<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-animation="true" data-delay="10000" style="position: absolute; top: 15px; right: 10px;">
    <div class="toast-header">
        <img src="~/img/sap1-logo.png" width="20" height="20" class="rounded mr-2" alt="...">
        <strong class="mr-auto">SAP1EMU</strong>
        <small class="text-muted">just now</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body" id="toast-message">
    </div>
</div>

<div class="container">
    <form id="RequestFeatureForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Title of new feature" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Feature description here"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


