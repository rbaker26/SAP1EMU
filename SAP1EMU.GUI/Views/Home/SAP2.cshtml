@{
    ViewData["Title"] = "SAP2";
}


<script src="/js/CodeMirror/lib/codemirror.js"></script>
<script src="/js/CodeMirror/mode/gas/gas_sap1.js" type="text/javascript"></script>
<link href="/js/CodeMirror/lib/codemirror.css" rel="stylesheet" type="text/css" />

<script src="/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="/js/Views/SAP2View.js" type="text/javascript"></script>

<h1>SAP-2 Emulator</h1>


<div class="card-deck">

    <div class="card">
        <div class="card-header">
            <h4>Assembly Editor</h4>
        </div>

        <div class="card-body">
            <div class="form-row">
                <div class="col editor">
                    @Html.TextArea("CodeList", null, new { rows = "20", cols = "80", @class = "codebox", id = "asm_code" })
                </div>

            </div>


        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h4>Emulator Controller</h4>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group mx-2">
                    <label for="langs">Instruction Set</label>
                    <select id="langs" class="form-control"></select>
                </div>
                <div class="form-group mx-2 d-flex align-items-center">
                    <button id="loadFile" onclick="getFromFile()" class="btn btn-light mt-auto">Load from File</button>
                </div>
                <div class="form-group mx-2 d-flex align-items-center">
                    <button id="loadRAM" class="btn btn-light mt-auto" onclick="LoadIntoRAM()">Compile</button>
                </div>
            </div>
            <div class="row mb-0">
                <div class="col-auto mr-0">
                    <button class="btn" id="back-button" onclick="back_button_onclick()"><img src="~/img/skip_previous-24px.svg " /></button>
                    <button class="btn" id="play-pause-button" onclick="play_button_onclick()"><img id="play-pause-img" src="~/img/play_arrow-24px.svg" /></button>
                    <button class="btn" id="next-button" onclick="next_button_onclick()"><img src="~/img/skip_next-24px.svg" /></button>
                    <button class="btn" id="reset-button" onclick="reset_button_onclick()"><img src="~/img/replay-24px.svg" /></button>
                </div>
                <div class="col mt-2 ml-0">
                    <div class="form-group row">
                        <label for="formControlRange" class="col-auto"><img src="~/img/speed-24px.svg" /></label>
                        <input type="range" class="form-control-range col mb-1" id="formControlRange" style="padding: 0;" min="0" max="2" value="1" step=".125" oninput="changeIntervalTiming(value);">
                    </div>
                </div>
                <div class="col-sm">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="instruction-box">???</span>
                        </div>
                        <input id="tstate-box" type="text" class="form-control input-disabled-correct-background tstate-width-correction" value="T1" aria-label="Zero Flag" aria-describedby="instruction-box" disabled>
                    </div>
                </div>
            </div>
            <div class="row mt-0 mb-3">
                <div class="col">
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" id="frameProgressBar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div>
                <h4>Input</h4>
                <input type="text" class="input-group" />
                <br />
                <button class="btn btn-secondary">Read Input</button>
            </div>




            <code class="emulator-out" id="emulator-out"><br /></code>
        </div>
    </div>
</div>

<div class="card-deck mt-4">

    <div class="card">
        <div class="card-header">
            <h4>SAP-2</h4>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col pr-2 pb-0 pt-1">
                    <div class="alert alert-secondary mb-2">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>Program Counter</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span class="m-0 ml-3 p-0" id="areg-block">0000 0000 0000 0000</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col pr-0 mr-0">
                            <div class="alert alert-secondary mb-2">
                                <div class="row justify-content-between">
                                    <div class="col pr-0">
                                        <b>IPort 1</b>
                                    </div>
                                    <div class="col-auto pl-0">
                                        <span id="areg-block">0000 0000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col pl-0 ml-1">
                            <div class="alert alert-secondary mb-2">
                                <div class="row justify-content-between">
                                    <div class="col pr-0">
                                        <b>IPort 2</b>
                                    </div>
                                    <div class="col-auto pl-0">
                                        <span id="areg-block">0000 0000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col pr-0 mr-0">
                            <div class="alert alert-secondary mb-2">
                                <div class="row justify-content-between">
                                    <div class="col pr-0">
                                        <b>OPort 1</b>
                                    </div>
                                    <div class="col-auto pl-0">
                                        <span id="areg-block">0000 0000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col pl-0 ml-1">
                            <div class="alert alert-secondary mb-2">
                                <div class="row justify-content-between">
                                    <div class="col pr-0">
                                        <b>OPort 2</b>
                                    </div>
                                    <div class="col-auto pl-0">
                                        <span id="areg-block">0000 0000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-secondary mb-2">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>Display</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">0</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-secondary mb-2">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>Instruction Register</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">0000 0000</span>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-secondary mb-2"><b>Sequencer</b><p class="m-0 p-0" id="areg-block">0111 0001 1101 0101 0100 0100 0000 0001 0000</p></div>
                    <div class="alert alert-secondary mb-0">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>Flags</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">SF&emsp;ZF&emsp;CF&emsp;UF</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-auto d-flex px-1 pb-0 pt-1">
                    <div class="alert alert-secondary mb-0">
                        <b>WBus</b><pre id="wbus-block">0x00 0x00</pre>
                    </div>
                </div>
                <div class="col pl-2 pt-1">
                    <div class="alert alert-secondary  mb-3">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>ALU</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">0000 0000</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2 mr-0 mb-3 pr-0">
                            <div class="alert alert-secondary" style="height: 100%;"><b>&nbsp;&nbsp;&nbsp;MUX</b><pre class="mb-0 pb-0" id="areg-block"> </pre></div>
                        </div>
                        <div class="col ml-0 pl-0">
                            <div class="row ml-0">
                                <div class="col pr-0 mr-0">
                                    <div class="alert alert-secondary mb-2">
                                        <div class="row justify-content-between">
                                            <div class="col pr-0">
                                                <b>A Reg</b>
                                            </div>
                                            <div class="col-auto pl-0">
                                                <span id="areg-block">0x00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col pl-0 ml-1">
                                    <div class="alert alert-secondary mb-2">
                                        <div class="row justify-content-between">
                                            <div class="col pr-0">
                                                <b>T Reg</b>
                                            </div>
                                            <div class="col-auto pl-0">
                                                <span id="areg-block">0x00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ml-0">
                                <div class="col">
                                    <div class="alert alert-secondary mb-2">
                                        <div class="row justify-content-between">
                                            <div class="col pr-0">
                                                <b>B Reg</b>
                                            </div>
                                            <div class="col-auto pl-0">
                                                <span id="areg-block">0000 0000</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ml-0">
                                <div class="col">
                                    <div class="alert alert-secondary mb-2">
                                        <div class="row justify-content-between">
                                            <div class="col pr-0">
                                                <b>C Reg</b>
                                            </div>
                                            <div class="col-auto pl-0">
                                                <span id="areg-block">0000 0000</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ml-0">
                                <div class="col">
                                    <div class="alert alert-secondary mb-3">
                                        <div class="row justify-content-between">
                                            <div class="col pr-0">
                                                <b>MDR</b>
                                            </div>
                                            <div class="col-auto pl-0">
                                                <span id="areg-block">0000 0000</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-secondary mb-3">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>RAM</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">0000 0000 0000 0000</span>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-secondary mb-0">
                        <div class="row justify-content-between">
                            <div class="col pr-0">
                                <b>MAR</b>
                            </div>
                            <div class="col-auto pl-0">
                                <span id="areg-block">0000 0000 0000 0000</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <h6 class="mb-1">RAM</h6>
                    @Html.TextArea("ram_dump", null, new { rows = "16", cols = "20", @class = "codebox", id = "ram_dump" })
                </div>
            </div>
        </div>
    </div>

</div>